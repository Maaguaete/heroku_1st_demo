html 
    head 
        title= "SINH VIEN"
        link(rel="stylesheet", href="./style.css") 
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css", integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N", crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js", integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj", crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js", integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct", crossorigin="anonymous")
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity='sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=' crossorigin='anonymous') 
    body 
        include ./header.pug

        div.wrapper
            div.logo
                img(src="https://www.freepnglogos.com/uploads/twitter-logo-png/twitter-bird-symbols-png-logo-0.png")
            div.text-center.mt-4.name Demo Lab

                form.p-3.mt-3(method="POST", action="/postLogin")
                    div.form-field.d-flex.align-items-center
                        span.far.fa-user
                        input(type="text", name="username", placeholder="Username")

                    div.form-field.d-flex.align-items-center
                        span.fas.fa-key
                        input(type="password", name="password", placeholder="Password")
                    if(err)
                        small.font-weight-light.text-danger.text-left(style="font-size: 15px;") #{err} 
                    input.btn.mt-3(type="submit", value="Login")

                div.text-center.fs-6
                    a(href="#") Forget password?
                    p  or 
                    button.btn.rounded#btn_signup(type="button", data-toggle="modal" data-target="#modal_signup") Sign up
                    div.modal.fade#modal_signup(data-backdrop="static", data-keyboard="false", tabindex="-1")
                            div.modal-dialog.modal-dialog-centered
                                div.modal-content.bg-light
                                    div.modal-header.bg-primary
                                        h3.modal-title.text-white SIGN UP
                                        button.close.text-warning(data-dismiss="modal", aria-label="Close")
                                            span(aria-hidden="true") &times;
                                    form.modal-body(action="/postSignup", method="POST")
                                        div.form-group
                                            label.text-left(for="username") Username: 
                                            input.form-control#signup_username(type="text", name="signup_username", placeholder="Enter username")
                                        div.form-group
                                            label.text-left(for="password") Password: 
                                            input.form-control#signup_password(type="text", name="signup_password", placeholder="Enter password")
                                        div.modal-footer
                                            button.btn.btn-secondary(type="button", data-dismiss="modal") Close
                                            input.btn.btn-primary(type="submit", value="Sign-up") 

        include ./footer.pug
    script(src="./ajax.js") 
