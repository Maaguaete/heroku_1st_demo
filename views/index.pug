html 
    head 
        title= "SINH VIEN"
        link(rel="stylesheet", href="./style.css") 
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css", integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N", crossorigin="anonymous")
        
    body 
        include ./header.pug

        div.container.form-group.w-75
            button.btn.btn-primary.my-2#btn_modal_addStudent(type="button") Add student
            div.modal.fade#modal_addStudent(data-backdrop="static", data-keyboard="false", tabindex="-1")
                div.modal-dialog.modal-dialog-centered
                    div.modal-content.bg-light
                        div.modal-header.bg-primary
                            h3.modal-title.text-white New Student
                            button.close.text-warning(data-dismiss="modal", aria-label="Close")
                                span(aria-hidden="true") &times;
                        form.modal-body
                            div.form-group
                                label(for="id") Student ID: 
                                input.form-control#id(type="text", name="id", placeholder="FAI-MDB-xxxxxx", value="FAI-MDB-000002")
                            div.form-group
                                label(for="fullname") Fullname: 
                                input.form-control#name(type="text", name="name", value="Nguyen Toan")
                            div.form-group
                                label(for="batch") Batch: 
                                input.form-control#batch(type="text", name="batch", value="T1.2109.E0")
                            div.form-group
                                label(for="address") Address: 
                                input.form-control#address(type="text", name="address", value="Pham The Hien")
                        div.modal-footer
                            button.btn.btn-secondary(type="button", data-dismiss="modal") Close
                            button.btn.btn-primary#btn_addStudent(type="button") ADD STUDENT

            input#searchBar.form-control(type="text", placeholder="Search by name")

            table.table.table-hover.text-center.mt-5
                thead 
                    tr 
                        th #
                        th Student ID
                        th Full name
                        th Batch
                        th Address
                        th Functions
                tbody 

        include ./footer.pug

    script(src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js", integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj", crossorigin="anonymous")
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity='sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=' crossorigin='anonymous') 
    script(src="./ajax.js") 
    script(src="./base64-js.js") 
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js", integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct", crossorigin="anonymous")